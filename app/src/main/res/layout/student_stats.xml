<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uni.pervasive.noisemeter.StudentStatsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Student"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentTextView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:autoText="true"
            android:text="1234569"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Course"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/stud_course_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/stud_prof_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            >
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Student Avg Attend."
                android:id="@+id/button2"
                android:onClick="studentAverageAttendance"
                android:gravity="center"
                android:layout_gravity="center" />
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Student Course Attend."
                android:id="@+id/button"
                android:onClick="studentCourseAttendance"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="Result"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/result"
            android:layout_weight="0.22"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="30dp" />
    </LinearLayout>
</RelativeLayout>
