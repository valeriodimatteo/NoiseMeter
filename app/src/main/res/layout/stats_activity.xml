<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainLayout"
    android:background="#ff4169ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query"
        android:id="@+id/btnQuery"
        android:background="#ff050fcd"
        android:textColor="#ffffffff"
        android:onClick="startAlarm"
        android:layout_alignTop="@+id/btnStop"
        android:layout_toLeftOf="@+id/txtAmpli"
        android:layout_toStartOf="@+id/txtAmpli" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnStop"
        android:background="#ff050fcd"
        android:textColor="#ffffffff"
        android:onClick="cancelAlarm"
        android:layout_below="@+id/txtMatricula"
        android:layout_toRightOf="@+id/txtAmpli"
        android:layout_toEndOf="@+id/txtAmpli"
        android:layout_marginTop="93dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amplitude"
        android:id="@+id/txtAmpli"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Level"
        android:id="@+id/txtBattery"
        android:textColor="#ffffffff"
        android:layout_below="@+id/txtAmpli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMatricula"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:text="Write Matricula" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtClassroom"
        android:textColor="#ffffffff"
        android:text="Write Room"
        android:layout_below="@+id/txtMatricula"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
