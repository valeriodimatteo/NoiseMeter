<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uni.pervasive.noisemeter.StatsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Student"
            android:id="@+id/textView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studentEditText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:autoText="true"
            android:text="nina"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Class"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lessonEditText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:text="Pervasive Systems "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/professorEditText"
            android:layout_gravity="center_horizontal"
            android:text="Chatzigiannakis"
            android:layout_weight="0.06"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            >
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Student Avg Attend."
                android:id="@+id/button2"
                android:onClick="studentAverageAttendance"
                android:gravity="center_horizontal"
                />
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Student Course Attend."
                android:id="@+id/button"
                android:onClick="studentCourseAttendance"
                android:gravity="center_horizontal"
                />
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Prof Attend."
                android:id="@+id/button4"
                android:gravity="center_horizontal"
                android:onClick="professorAverageAttendance"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            >
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Course Attend."
                android:id="@+id/button3"
                android:gravity="center_horizontal"
                android:onClick="courseAverageAttendance"/>
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Course Avg Rating"
                android:id="@+id/button5"
                android:onClick="courseAverageRating"
                android:gravity="center_horizontal"
                />
            <Button
                android:layout_weight=".33"
                android:layout_height="84dp"
                android:layout_width="0dp"
                android:text="Prof Avg Rating"
                android:id="@+id/button6"
                android:onClick="professorAverageRating"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/result"
            android:layout_weight="0.22"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="30dp" />
    </LinearLayout>
</RelativeLayout>
